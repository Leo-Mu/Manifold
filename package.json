{
  "name": "vibe-context-manager",
  "displayName": "Vibe Context Manager",
  "description": "智能上下文管理和知识提取工具",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vibeContext.openContextManager",
        "title": "打开上下文管理器",
        "category": "Vibe Context"
      },
      {
        "command": "vibeContext.parseCurrentChat",
        "title": "解析当前对话",
        "category": "Vibe Context"
      },
      {
        "command": "vibeContext.composeContext",
        "title": "组合上下文",
        "category": "Vibe Context"
      },
      {
        "command": "vibeContext.configureAI",
        "title": "配置 AI 提供商",
        "category": "Vibe Context"
      },
      {
        "command": "vibeContext.openChatInterface",
        "title": "打开 AI 对话界面",
        "category": "Vibe Context"
      },
      {
        "command": "vibeContext.chatWithContext",
        "title": "基于上下文对话",
        "category": "Vibe Context"
      },
      {
        "command": "vibeContext.newChat",
        "title": "新建对话",
        "category": "Vibe Context"
      },
      {
        "command": "vibeContext.showContextStats",
        "title": "显示上下文统计",
        "category": "Vibe Context"
      }
    ],
    "views": {
      "vibeContextContainer": [
        {
          "id": "vibeContextTree",
          "name": "上下文历史",
          "when": "vibeContext.enabled"
        },
        {
          "id": "vibeChatTree",
          "name": "AI 对话",
          "when": "vibeContext.enabled"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vibeContextContainer",
          "title": "Vibe Context Manager",
          "icon": "$(symbol-namespace)"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vibeContext.openContextManager",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v"
      },
      {
        "command": "vibeContext.composeContext",
        "key": "ctrl+k ctrl+c",
        "mac": "cmd+k cmd+c"
      },
      {
        "command": "vibeContext.openChatInterface",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "vibeContext.chatWithContext",
        "key": "ctrl+k ctrl+a",
        "mac": "cmd+k cmd+a"
      }
    ],
    "configuration": {
      "title": "Vibe Context Manager",
      "properties": {
        "vibeContext.autoParseChats": {
          "type": "boolean",
          "default": true,
          "description": "自动解析聊天记录"
        },
        "vibeContext.maxHistoryItems": {
          "type": "number",
          "default": 100,
          "description": "最大历史记录数量"
        },
        "vibeContext.aiConfig": {
          "type": "object",
          "description": "AI 提供商配置（不包含敏感信息）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/lowdb": "^1.0.15",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.13",
    "lowdb": "^1.0.0",
    "node-fetch": "^3.3.2"
  }
}
